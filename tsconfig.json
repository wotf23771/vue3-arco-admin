{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "#": [
        "."
      ],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2020",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "apps/**/*.ts",
    "apps/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
